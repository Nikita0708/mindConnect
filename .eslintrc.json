{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": ["error", "ignorePackages", {
      "js": "never"
    }],
    "no-underscore-dangle": ["error", { "allow": ["_id", "_token"] }],
    "no-useless-escape": "off",
    "no-console": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "consistent-return": "off",
    "camelcase": "off",
    "no-restricted-globals": ["error", "isNaN"]
  }
}
